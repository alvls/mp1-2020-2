            for (i = 0; i < n; i++) {
                if (chisloigroka1[i] == chislo[i]) { //условие быков 
                    l++;
                }
            }
            printf("\nЧисло быков: %d", l); //
            f = 0;
            h = 0; //коровы
            for (i = 0; i < n; i++) {
                for (f = 0; f < n; f++) { //далее условие для коров
